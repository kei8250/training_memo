<%= render 'workouts/header' %>
    <div class="row">
      <div class="col-md-12">
        <h2><%= @user.name %></h2>
        <p><%= @user.email %></p>
       <%= link_to("ログアウト", "/logout", {method: :post}) %>
    <h2>お気に入りのworkout</h2>
    <table class="table table-striped">
      <thead class="thead-light">
        <tr>
          <th>name</th>
          <th>part</th>
        </tr>
      </thead>
      <tbody>
        <% @likes.each do |like| %>
            <% workout = Workout.find_by(id: like.workout_id) %>
            <tr>
                <th><%= link_to workout.name, workout_path(workout) %></th>
                <th><%= workout.part %></th>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
     
              
    